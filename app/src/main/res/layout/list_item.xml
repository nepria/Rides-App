<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/black"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="19dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/mapimg"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rideid"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:layout_marginTop="16dp"
            android:padding="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="Ride Id:"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/mapimg"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/rideid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="002"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/mapimg"
            android:layout_marginStart="110dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="Origin Station:"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/rideid"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/originstation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/rideid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="20"
            android:textSize="20dp"
            android:layout_marginStart="178dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="Station Path:"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/originstation"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/station_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/originstation"
            app:layout_constraintBottom_toTopOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="[89, 88, 90, 56, 77, 67]"
            android:textSize="20dp"
            android:layout_marginStart="165dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/station_path"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="Date:"
            android:textSize="20dp"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/station_path"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="15th Feb 2022 16:33"
            android:textSize="20dp"
            android:layout_marginStart="88dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="Distance:"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/date"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:text="20"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/date"
            android:layout_marginStart="125dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />







    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>